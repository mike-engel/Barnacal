{
	"name": "barnacal",
	"version": "0.9.0",
	"description": "A simple menu bar app for viewing a calendar",
	"main": "src/electron/index.js",
	"scripts": {
		"dev": "parcel --target=electron --public-url ./ src/ui/index.html",
		"dev:server": "parcel src/ui/index.html",
		"build": "parcel build src/ui/index.html",
		"dist": "npm run build; electron-builder -mwl",
		"electron:start": "electron ./src/electron/index",
		"electron:watch": "watchexec -r -s SIGKILL -e js,html -i '*/lib/**' npm run electron:start",
		"pack": "npm run build; electron-builder -mwl --dir",
		"start": "node scripts/startDev.js",
		"test": "NODE_ENV=test mocha --exit --recursive test/**/*.test.js",
		"test:coverage": "nyc --reporter=text --reporter=html npm run test"
	},
	"author": "Mike Engel <mike@mike-engel.com>",
	"license": "MIT",
	"dependencies": {
		"date-fns": "^1.29.0",
		"electron-is-dev": "^1.1.0",
		"first-run": "^2.0.0",
		"is-online": "^8.2.0",
		"raven": "^2.6.4",
		"raven-js": "^3.27.2",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"styled-components": "^4.3.2",
		"styled-typography": "^1.0.1"
	},
	"devDependencies": {
		"@types/react": "^16.9.1",
		"@types/react-dom": "^16.8.5",
		"@types/styled-components": "^4.1.18",
		"chai": "^4.2.0",
		"electron": "^6.0.2",
		"electron-builder": "^21.2.0",
		"electron-builder-squirrel-windows": "^21.2.0",
		"mocha": "^6.2.0",
		"nyc": "^14.1.1",
		"parcel-bundler": "^1.12.3",
		"proxyquire": "^2.1.3",
		"sinon": "^7.4.1",
		"typescript": "^3.5.3"
	},
	"build": {
		"appId": "com.mike-engel.barnacal",
		"productName": "Barnacal",
		"compression": "maximum",
		"files": [
			"src/electron/icons/**/*",
			"public/main.js",
			"src/electron/index.js",
			"src/electron/index.html",
			"src/electron/about.html",
			"src/electron/auto-updater.js"
		],
		"mac": {
			"icon": "src/electron/icons/app/AppIcon.icns"
		},
		"win": {
			"icon": "src/electron/icons/app/AppIcon.ico"
		},
		"linux": {
			"category": "Utility",
			"target": [
				{
					"target": "deb",
					"arch": [
						"ia32",
						"x64"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"ia32",
						"x64"
					]
				}
			]
		}
	},
	"nyc": {
		"check-coverage": true
	}
}
